<?xml version="1.0"?>
<robot name="h_bot">
    <link name="base_link">
        <visual>
            <geometry>
                <mesh filename="package://robot_consepts_viz_pkg/meshes/dae/base.dae"/>
            </geometry>
        </visual>
    </link>

    <link name="link_1">
        <visual>
            <geometry>
                <mesh filename="package://robot_consepts_viz_pkg/meshes/dae/joint1.dae"/>
            </geometry>
            <origin rpy="-1.5708 0 0" xyz="0 0 0.1425"/>
        </visual>
    </link>

    <joint name="joint_1" type="revolute">
        <parent link="base_link"/>
        <child link="link_1"/>
        <limit lower="${-pi}" upper="${pi}" effort="1000.0" velocity="0.5"/>
        <origin rpy="0 0 0" xyz="0 0 0.1425"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="link_2">
        <visual>
            <geometry>
                <mesh filename="package://robot_consepts_viz_pkg/meshes/dae/joint2.dae"/>
            </geometry>
            <origin rpy="0 0 ${pi}" xyz="-0.7 0 0"/>
        </visual>
    </link>
    
    <joint name="joint_2" type="revolute">
        <parent link="link_1"/>
        <child link="link_2"/>
        <limit lower="${-pi}" upper="${pi}" effort="1000.0" velocity="0.5"/>
        <origin rpy="${-pi/2} ${pi/2} 0" xyz="0 0 0.1425"/>
        <axis xyz="0 0 1"/>
    </joint>    
</robot>